.coral-NumberInput
  border-radius: .25rem
  &.is-focused
    .coral-InputGroup-input
      z-index: 2
    .coral-InputGroup-button > .coral-Button:focus,
    .coral-InputGroup-button > .coral-Button:active
      border-color: transparent
      outline: none
      -webkit-box-shadow: none
      box-shadow: none
      text-shadow: none
      border-color: #d0d0d0
      background-color: #fafafa
      z-index: 1
