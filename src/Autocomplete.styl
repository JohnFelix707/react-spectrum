//There are a few dangerous things in here such as overriding colors
//and manual spacing. Our options are very limited if we want to use
//coralui styles.

overflow-item()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  padding-right: 45px
  box-sizing: border-box

.coral-Autocomplete
  .Select-value, .Select-placeholder
    position: absolute
    padding: 11px

  .Select-placeholder
    overflow-item()
    z-index: 1
    color: #919191
    font-style: italic

  .Select-control
    z-index: 1
    background: #fff

  &.has-icon
    .Select-placeholder
      padding-left: 31px

  &.is-disabled
    .Select-placeholder
      color: #bebebe

  &.Select--single
    &:not(.is-disabled)
      .Select-input-field
        background-color: transparent
      .Select-value
        background-color: #fff
    &.is-disabled
      .Select-placeholder, .Select-value
        z-index: 1
    &.has-icon
      .Select-value
        padding-left: 31px

    .Select-value
      position: absolute
      left: 0
      width: 100%
      text-align: left
      overflow-item()

  &.Select--multi
    text-align: left

  .Select-menu-outer
    width: 100%
    z-index: 2
    text-align: left
    top: 2.4rem

  .Select-noresults
    color: #bebebf
