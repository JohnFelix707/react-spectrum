{
  "name": "rs3uxp-plugin",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "dist/index.html",
  "scripts": {
    "build:sync": "rsync -r --exclude dev ../react-spectrum/packages/ ./node_modules/ && echo copied react-spectrum packages to node_modules",
    "build:parcel": "rm -rf .parcel-cache && parcel build src/index.html --target main --no-content-hash",
    "build": "run-s build:*",
    "watch:inspector": "cd ../torq-native && node build inspector",
    "watch:parcel": "rm -rf .parcel-cache && parcel serve src/index.html --target main --no-content-hash",
    "watch:uxp": "sleep 10 && yarn uxp",
    "watch:sync": "./watch.sh button textfield picker",
    "watch": "run-p watch:*",
    "uxp": "../torq-native/build/out/bin/macos/v8/nativeui/Debug/demo.app/Contents/MacOS/demo --extension dist"
  },
  "targets": {
    "main": {
      "minify": false
    }
  },
  "alias": {
    "@storybook/react": "./src/@storybook/react",
    "@storybook/addon-actions": "./src/@storybook/addon-actions",
    "@adobe/spectrum-css-temp": "../react-spectrum/packages/@adobe/spectrum-css-temp",
    "@react-spectrum/button": "./sync/button/index.ts",
    "@react-spectrum/picker": "./sync/picker/index.ts",
    "@react-spectrum/textfield": "./sync/textfield/index.ts",
    "../intl/*.json": "../intl/en-US.json"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.1",
    "postcss-modules": "^4.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@adobe/react-spectrum-workflow": "^1.0.1",
    "@react-spectrum/button": "^3.3.0",
    "@react-spectrum/provider": "^3.1.2",
    "@react-spectrum/theme-default": "^3.1.0",
    "@spectrum-icons/workflow": "^3.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-transition-group": "^4.4.1"
  }
}
